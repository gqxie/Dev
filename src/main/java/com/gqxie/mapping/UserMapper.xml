<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gqxie.dao.UserDao">

    <select id="findAll" resultType="com.gqxie.entity.User">
        select * from t_user;
    </select>

    <select id="findByUserID" resultType="com.gqxie.entity.User"
        parameterType="long">
        select *
        from t_user where userID = #{userID};
    </select>

    <select id="findByAccount" resultType="com.gqxie.entity.User"
        parameterType="string">
        select *
        from t_user where account = #{account};
    </select>

    <select id="verify" parameterType="String" resultType="com.gqxie.entity.User">
        select *
        from t_user where
        account = #{account} and pwd=#{pwd};
    </select>

</mapper>